{% extends '@TonishBlog/BaseLayout/layout.html.twig' %}

{% block content_title %}
    <h1>Creazione Articolo</h1>
{% endblock content_title %}

{% block sidebar %}
    <li><a href="{{ path('home_index') }}"><i class="fa fa-user-circle"></i> <span>Homepage ricerca</span></a></li>
    <li class="active"><a href="{{ path('blog_index') }}"><i class="fa fa-user-circle"></i> <span>Articoli</span></a></li>
{% endblock sidebar %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">

            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body">
                        {% form_theme form _self '@TonishBlog/BaseLayout/form.html.twig' %}
                        {{ form_start(form, { 'attr': {'class': 'form-group', 'novalidate': 'novalidate'}}) }}
                        {{ form_widget(form) }}
                        <input class="btn btn-success" type="submit" value="Crea" />
                        {{ form_end(form) }}
                    </div>
                    <div>
                        <a class="btn btn-info" href="{{ path('blog_index') }}">Torna alla lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

