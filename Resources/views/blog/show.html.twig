{% extends '@TonishBlog/BaseLayout/layout.html.twig' %}

{% block sidebar %}
    <li class="active"><a href="{{ path('blog_index') }}"><i class="fa fa-user-circle"></i> <span>Articoli</span></a></li>
{% endblock sidebar %}

{% block content_title %}
    <h1>Articolo</h1>
{% endblock content_title %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <table>
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ blog.id }}</td>
                        </tr>
                        <tr>
                            <th>Testo</th>
                            <td>{{ blog.title }}</td>
                        </tr>
                        <tr>
                            <th>Contenuto</th>
                            <td>{{ blog.content }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-info" href="{{ path('blog_index') }}" style="margin-right: 5px;">Torna alla lista</a>
                    <a class="btn btn-primary" href="{{ path('blog_edit', { 'id': blog.id }) }}">Modifica</a>
                    {{ form_start(delete_form) }}
                    {#<input class="btn btn-danger" type="submit" value="Cancella" style="margin-top: 5px;">#}
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
