{% extends '@TonishBlog/BaseLayout/layout.html.twig' %}

{% block sidebar %}
    <li><a href="{{ path('home_index') }}"><i class="fa fa-user-circle"></i> <span>Homepage ricerca</span></a></li>
    <li class="active"><a href="{{ path('blog_index') }}"><i class="fa fa-user-circle"></i> <span>Articoli</span></a></li>
{% endblock sidebar %}

{% block content_title %}
    <h1>Modifica Articolo</h1>
{% endblock content_title %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body">
                        {% form_theme edit_form with [_self, '@TonishBlog/BaseLayout/form.html.twig'] %}
                        {{ form_start(edit_form, { 'attr': {'class': 'form-group', 'novalidate': 'novalidate'}}) }}
                        {{ form_widget(edit_form) }}
                        <input class="btn btn-primary" type="submit" value="Salva la modifica" />
                        {{ form_end(edit_form) }}
                    </div>
                    <div>
                        <a class="btn btn-info" href="{{ path('blog_index') }}">Torna alla lista</a>
                        {{ form_start(delete_form) }}
                        {#<input style="margin-top: 5px;" class="btn btn-danger" type="submit" value="Cancella">#}
                        {{ form_end(delete_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

